<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/src/css/quan_li_bm.css" />
  <title>Quản Lí Bộ Môn</title>
</head>

<body>
  <div class="main">
    <%- include(header) %>
    <%- include(thongbao) %>
    <div class="container">

      <div class="box-table">

        <!-- Button -->
        <div class="content container__button">
          <button class="button-35" id="add__subject">Thêm Bộ Môn</button>
          <button class="button-35" id="delete__subject">Xoá Bộ Môn</button>
        </div>

        <!-- Table -->
        <div class="content container__table">
          <table>
            <thead>
              <tr>
                <th>
                  <div class="checkbox-wrapper-4">
                    <input type="checkbox" id="row--all" class="inp-cbx all-cbx" value="2" />
                    <label for="row--all" class="cbx"><span> <svg height="10px" width="12px"></svg></span>
                    </label>
                  </div>
                </th> 
                <th>STT</th>
                <th style="width: 40%;">Tên Bộ Môn</th>
                <th style="width: 35%;">Khoa</th>
                <th>Cập Nhập</th>
              </tr>
            </thead>
            <tbody>
              <% for (let i = 0; i < branchs.length; i++) {%>
                <tr>
                  <td>
                    <div class="checkbox-wrapper-4">
                      <input type="checkbox" id="row--0" class="inp-cbx" value="2" />
                      <label for="row--0" class="cbx"><span> <svg height="10px" width="12px"></svg></span>
                      </label>
                    </div>
                  </td>
                  <td><%= i + 1 %></td>
                  <td><%= branchs[i].name %></td>
                  <td><%= branchs[i].dep_name %></td>
                  <td>
                    <a id="edit__subject" href="#">Sửa</a>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="modal edit">
        <div class="modal_wrap edit">
          <div class="modal_main">

            <div class="content content--title">
              <h2 class="title-box">SỬA THÔNG TIN BỘ MÔN</h2>
            </div>

            <div class="content content--subtitle">
              <h3 class="sub__title name--subject">Tên Bộ Môn</h3>
              <textarea name="" id="" cols="30" rows="3" placeholder="Nhập tên Bộ môn cần chỉnh sửa"></textarea>
            </div>

            <div class="content subtitle">
              <h3 class="sub__title name--dep">Khoa: <%= dep %></h3>
            </div>

            <div class="box-button">
                <div><button class="button-35 exist_btn">Hủy</button></div>
                <div><button class="button-35 save_btn">Lưu</button></div>
            </div>
          </div>
        </div>
      </div>

      <div class="modal add">
        <div class="modal_wrap add">
          <div class="modal_main">
            <div class="content title">
              <h2 class="title-box">THÊM BỘ MÔN</h2>
            </div>

            <div class="content teacher__name">
              <h3 class="sub__title name--subject">Tên Bộ Môn</h3>
              <textarea name="" id="" cols="30" rows="3" placeholder="Nhập tên Bộ môn mới (Bắt buộc)"></textarea>
            </div>

            <div class="content teacher__account">
              <h3 class="sub__title name--dep">Khoa: <%= dep %></h3>
            </div>

            <div class="box-button">
                <div><button class="button-35 exist_btn">Hoàn Tác</button></div>
                <div><button class="button-35 save_btn">Lưu</button></div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
  <%- include(footer) %>
</body>

<script src="/src/JS/quan_li_bm.js"></script>

</html>